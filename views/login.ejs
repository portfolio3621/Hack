<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Admin Login</title>
<script src="https://cdn.tailwindcss.com"></script>

<style>
  body {
    background: linear-gradient(135deg, #0f0f0f, #1a1a1a);
  }
</style>
</head>

<body class="min-h-screen flex items-center justify-center px-4">

<div class="w-full max-w-md bg-black/60 backdrop-blur-xl
            border border-gray-700 rounded-2xl p-6 sm:p-8 shadow-2xl">

  <h1 class="text-3xl font-semibold text-center text-white mb-2">
    Admin Login
  </h1>
  <p class="text-center text-gray-400 mb-6">
    Secure access required
  </p>

  <input
    id="password"
    type="password"
    placeholder="Enter admin password"
    class="w-full px-4 py-3 rounded-xl bg-black border border-gray-600
           text-white placeholder-gray-500 focus:outline-none
           focus:ring-2 focus:ring-blue-500 mb-4"
  />

  <button
    onclick="login()"
    class="w-full py-3 rounded-xl bg-blue-600 hover:bg-blue-700
           font-semibold text-white transition">
    Sign In
  </button>

  <p id="err" class="text-center text-red-400 mt-4"></p>
</div>

<script>
function login() {
  const pass = document.getElementById("password").value;

  if (pass === "<%= process.env.ADMIN_PASSWORD %>") {
    localStorage.setItem("isAdmin", "true");
    window.location.href = "/admin/dashboard";
  } else {
    document.getElementById("err").innerText = "Invalid password";
  }
}
</script>

</body>
</html>