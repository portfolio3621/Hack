<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Admin Dashboard</title>
<script src="https://cdn.tailwindcss.com"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
  body {
    background: #0b0b0b;
  }
  .modal {
    transition: all 0.3s ease;
  }
  .fade-in {
    animation: fadeIn 0.3s ease-in;
  }
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(-10px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>
</head>

<body class="text-white">

<script>
// Check authentication
if (localStorage.getItem("isAdmin") !== "true") {
  window.location.href = "/admin";
}

function logout() {
  localStorage.removeItem("isAdmin");
  window.location.href = "/admin";
}

// Image preview modal functions
function openPreview(imageUrl) {
  document.getElementById('previewImage').src = imageUrl;
  document.getElementById('downloadLink').href = imageUrl;
  document.getElementById('imageModal').classList.remove('hidden');
  document.body.style.overflow = 'hidden';
}

function closePreview() {
  document.getElementById('imageModal').classList.add('hidden');
  document.body.style.overflow = 'auto';
}

// Confirm delete all
function confirmDeleteAll() {
  if (confirm("⚠️ Are you sure you want to delete ALL records? This action cannot be undone.")) {
    document.getElementById('deleteAllForm').submit();
  }
  return false;
}

// Confirm single delete
function confirmDelete(id) {
  if (confirm("Are you sure you want to delete this record?")) {
    document.getElementById(`deleteForm-${id}`).submit();
  }
  return false;
}

// Close modal on ESC key
document.addEventListener('keydown', (e) => {
  if (e.key === 'Escape') {
    closePreview();
  }
});

// Search functionality
function searchRecords() {
  const searchTerm = document.getElementById('searchInput').value.toLowerCase();
  const records = document.querySelectorAll('.record-card');
  let visibleCount = 0;
  
  records.forEach(record => {
    const text = record.textContent.toLowerCase();
    if (text.includes(searchTerm)) {
      record.classList.remove('hidden');
      visibleCount++;
    } else {
      record.classList.add('hidden');
    }
  });
  
  document.getElementById('visibleCount').textContent = visibleCount;
}

// Filter by date
function filterByDate() {
  const dateFilter = document.getElementById('dateFilter').value;
  const records = document.querySelectorAll('.record-card');
  
  if (!dateFilter) {
    records.forEach(record => record.classList.remove('hidden'));
    return;
  }
  
  records.forEach(record => {
    const dateElement = record.querySelector('.record-date');
    if (dateElement) {
      const recordDate = new Date(dateElement.textContent);
      const filterDate = new Date(dateFilter);
      
      if (recordDate.toDateString() === filterDate.toDateString()) {
        record.classList.remove('hidden');
      } else {
        record.classList.add('hidden');
      }
    }
  });
}

// Export data
function exportData(format) {
  let url = '/export/csv';
  if (format === 'json') {
    url = '/api/export/json';
  }
  window.open(url, '_blank');
}

// Refresh data
async function refreshData() {
  const refreshBtn = document.getElementById('refreshBtn');
  const originalHTML = refreshBtn.innerHTML;
  
  refreshBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Refreshing...';
  refreshBtn.disabled = true;
  
  // Simulate refresh
  setTimeout(() => {
    window.location.reload();
  }, 1000);
}
</script>

<!-- Image Preview Modal -->
<div id="imageModal" class="fixed inset-0 z-50 hidden modal">
  <div class="absolute inset-0 bg-black/90" onclick="closePreview()"></div>
  <div class="absolute inset-0 flex items-center justify-center p-4">
    <div class="relative max-w-4xl max-h-[90vh] bg-gray-900 rounded-xl p-4">
      <button onclick="closePreview()"
        class="absolute -top-10 right-0 text-white hover:text-gray-300 text-2xl">
        <i class="fas fa-times"></i>
      </button>
      <img id="previewImage" class="max-w-full max-h-[70vh] object-contain rounded-lg" />
      <div class="mt-4 flex justify-center space-x-4">
        <a id="downloadLink" href="#" target="_blank"
          class="inline-flex items-center bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-lg">
          <i class="fas fa-download mr-2"></i>Download Image
        </a>
        <button onclick="closePreview()"
          class="inline-flex items-center bg-gray-700 hover:bg-gray-600 px-4 py-2 rounded-lg">
          <i class="fas fa-times mr-2"></i>Close
        </button>
      </div>
    </div>
  </div>
</div>

<!-- HEADER -->
<header class="sticky top-0 bg-black/90 backdrop-blur-lg border-b border-gray-800 z-40">
  <div class="max-w-7xl mx-auto px-4 py-4 flex justify-between items-center">
    <div>
      <h1 class="text-xl sm:text-2xl font-semibold">
        <i class="fas fa-shield-alt mr-2 text-orange-500"></i>Admin Dashboard
      </h1>
      <p class="text-sm text-gray-400 mt-1">
        Total Records: <span class="font-semibold"><%= data.length %></span>
        | Showing: <span id="visibleCount" class="font-semibold"><%= data.length %></span>
      </p>
    </div>

    <div class="flex items-center space-x-4">
      <button onclick="refreshData()" id="refreshBtn"
        class="flex items-center text-sm text-blue-400 hover:text-blue-300">
        <i class="fas fa-sync-alt mr-2"></i>Refresh
      </button>
      <span class="text-sm text-gray-400 hidden sm:block">
        <i class="fas fa-clock mr-1"></i><span id="currentTime"></span>
      </span>
      <button onclick="logout()"
        class="flex items-center text-sm text-red-400 hover:text-red-500">
        <i class="fas fa-sign-out-alt mr-2"></i>Logout
      </button>
    </div>
  </div>
</header>

<!-- STATS BAR -->
<section class="max-w-7xl mx-auto px-4 py-6">
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
    <div class="bg-black/60 border border-gray-800 rounded-xl p-4 hover:border-blue-500/50 transition">
      <div class="flex items-center">
        <div class="bg-blue-900/30 p-3 rounded-lg mr-3">
          <i class="fas fa-database text-blue-400"></i>
        </div>
        <div>
          <p class="text-sm text-gray-400">Total Records</p>
          <p class="text-2xl font-bold"><%= data.length %></p>
        </div>
      </div>
    </div>
    
    <div class="bg-black/60 border border-gray-800 rounded-xl p-4 hover:border-green-500/50 transition">
      <div class="flex items-center">
        <div class="bg-green-900/30 p-3 rounded-lg mr-3">
          <i class="fas fa-map-marker-alt text-green-400"></i>
        </div>
        <div>
          <p class="text-sm text-gray-400">Unique Locations</p>
          <p class="text-2xl font-bold"><%= new Set(data.map(d => d.lat + ',' + d.lon)).size %></p>
        </div>
      </div>
    </div>
    
    <div class="bg-black/60 border border-gray-800 rounded-xl p-4 hover:border-purple-500/50 transition">
      <div class="flex items-center">
        <div class="bg-purple-900/30 p-3 rounded-lg mr-3">
          <i class="fas fa-users text-purple-400"></i>
        </div>
        <div>
          <p class="text-sm text-gray-400">Unique IPs</p>
          <p class="text-2xl font-bold"><%= new Set(data.map(d => d.ip)).size %></p>
        </div>
      </div>
    </div>
    
    <div class="bg-black/60 border border-gray-800 rounded-xl p-4 hover:border-orange-500/50 transition">
      <div class="flex items-center">
        <div class="bg-orange-900/30 p-3 rounded-lg mr-3">
          <i class="fas fa-calendar-day text-orange-400"></i>
        </div>
        <div>
          <p class="text-sm text-gray-400">Today's Records</p>
          <p class="text-2xl font-bold">
            <% 
              const today = new Date();
              today.setHours(0,0,0,0);
              const todayCount = data.filter(d => new Date(d.createdAt) >= today).length;
            %>
            <%= todayCount %>
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- SEARCH & FILTERS -->
<section class="max-w-7xl mx-auto px-4 py-6 border-t border-gray-800/50">
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
    <!-- Search Box -->
    <div>
      <label class="block text-sm text-gray-400 mb-2">Search Records</label>
      <div class="relative">
        <input type="text" id="searchInput" placeholder="Search by IP, location, or date..."
          onkeyup="searchRecords()"
          class="w-full bg-gray-900 border border-gray-700 rounded-lg pl-10 pr-4 py-2
                 focus:outline-none focus:border-blue-500 transition">
        <i class="fas fa-search absolute left-3 top-3 text-gray-500"></i>
      </div>
    </div>
    
    <!-- Date Filter -->
    <div>
      <label class="block text-sm text-gray-400 mb-2">Filter by Date</label>
      <input type="date" id="dateFilter" onchange="filterByDate()"
        class="w-full bg-gray-900 border border-gray-700 rounded-lg px-4 py-2
               focus:outline-none focus:border-green-500 transition">
    </div>
    
    <!-- Export Options -->
    <div>
      <label class="block text-sm text-gray-400 mb-2">Export Data</label>
      <div class="flex space-x-2">
        <button onclick="exportData('csv')"
          class="flex-1 bg-gray-800 hover:bg-gray-700 border border-gray-700 
                 rounded-lg px-4 py-2 text-sm transition">
          <i class="fas fa-file-csv mr-2"></i>CSV
        </button>
        <button onclick="exportData('json')"
          class="flex-1 bg-gray-800 hover:bg-gray-700 border border-gray-700 
                 rounded-lg px-4 py-2 text-sm transition">
          <i class="fas fa-file-code mr-2"></i>JSON
        </button>
      </div>
    </div>
  </div>
</section>

<!-- ACTION BAR -->
<section class="max-w-7xl mx-auto px-4 py-6 border-t border-gray-800/50">
  <div class="flex justify-between items-center">
    <div>
      <h2 class="text-lg font-semibold mb-2">Verification Records</h2>
      <p class="text-sm text-gray-400">
        <i class="fas fa-info-circle mr-1"></i>
        Click on images to preview, or click map links to view location
      </p>
    </div>
    
    <% if (data.length > 0) { %>
      <form id="deleteAllForm" method="POST" action="/delete-all" class="hidden"></form>
      <button onclick="confirmDeleteAll()"
        class="flex items-center bg-red-600 hover:bg-red-700 text-white
               px-4 py-2 rounded-lg text-sm font-medium transition">
        <i class="fas fa-trash mr-2"></i>Delete All
      </button>
    <% } %>
  </div>
</section>

<!-- DATA GRID -->
<section class="max-w-7xl mx-auto px-4 pb-10">
  <% if (data.length === 0) { %>
    <div class="text-center py-20 fade-in">
      <div class="mx-auto w-20 h-20 mb-4 rounded-full bg-gray-900 flex items-center justify-center">
        <i class="fas fa-inbox text-gray-600 text-3xl"></i>
      </div>
      <h3 class="text-xl font-semibold mb-2">No Records Found</h3>
      <p class="text-gray-400 mb-6">No user submissions have been recorded yet.</p>
      <a href="/" target="_blank"
        class="inline-flex items-center bg-orange-500 hover:bg-orange-600 text-black 
               font-medium px-4 py-2 rounded-lg">
        <i class="fas fa-eye mr-2"></i>View Tracking Page
      </a>
    </div>
  <% } else { %>
    <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
      <% data.forEach((item, index) => { %>
        <div class="record-card bg-black/60 border border-gray-800 rounded-xl p-4
                    hover:border-gray-700 transition-all duration-300
                    hover:shadow-lg hover:shadow-orange-500/5 fade-in"
             style="animation-delay: <%= index * 0.05 %>s;">
          
          <!-- IMAGE PREVIEW -->
          <% if (item.imageUrl) { %>
            <div class="relative mb-3 group">
              <img 
                src="<%= item.imageUrl %>"
                onclick="openPreview('<%= item.imageUrl %>')"
                class="w-full h-48 object-cover rounded-lg mb-2
                       border border-gray-700 cursor-pointer
                       group-hover:opacity-90 transition"
                loading="lazy"
              />
              <div class="absolute top-2 right-2 bg-black/70 rounded-full p-2 
                          opacity-0 group-hover:opacity-100 transition">
                <i class="fas fa-expand text-xs text-white"></i>
              </div>
              <div class="absolute top-2 left-2 bg-black/70 text-xs px-2 py-1 rounded">
                #<%= index + 1 %>
              </div>
            </div>
          <% } else { %>
            <div class="w-full h-48 bg-gray-900 rounded-lg mb-3 flex items-center justify-center">
              <i class="fas fa-image text-gray-700 text-3xl"></i>
            </div>
          <% } %>

          <!-- DATA FIELDS -->
          <div class="space-y-2 text-sm">
            <div class="flex items-start">
              <i class="fas fa-map-marker-alt text-gray-500 mr-2 mt-0.5"></i>
              <div class="flex-1">
                <p class="text-gray-400 text-xs">Location Coordinates</p>
                <p class="font-mono text-sm break-all"><%= item.lat %>, <%= item.lon %></p>
              </div>
            </div>
            
            <div class="flex items-start">
              <i class="fas fa-globe text-gray-500 mr-2 mt-0.5"></i>
              <div class="flex-1">
                <p class="text-gray-400 text-xs">IP Address</p>
                <p class="font-mono text-sm"><%= item.ip %></p>
              </div>
            </div>
            
            <div class="flex items-start">
              <i class="fas fa-clock text-gray-500 mr-2 mt-0.5"></i>
              <div class="flex-1">
                <p class="text-gray-400 text-xs">Submitted</p>
                <p class="record-date text-sm"><%= new Date(item.createdAt).toLocaleString() %></p>
              </div>
            </div>
          </div>

          <!-- ACTIONS -->
          <div class="flex justify-between items-center mt-4 pt-3 border-t border-gray-800/50">
            <div class="flex space-x-2">
              <a target="_blank"
                 class="flex items-center text-blue-400 hover:text-blue-300 text-xs sm:text-sm"
                 href="https://www.google.com/maps?q=<%= item.lat %>,<%= item.lon %>"
                 title="View on Google Maps">
                <i class="fas fa-map mr-1"></i>Map
              </a>
              <span class="text-gray-600">•</span>
              <a href="<%= item.imageUrl %>" target="_blank"
                class="flex items-center text-gray-400 hover:text-gray-300 text-xs sm:text-sm"
                title="Open image in new tab">
                <i class="fas fa-external-link-alt mr-1"></i>Open
              </a>
            </div>
            
            <div>
              <form id="deleteForm-<%= item._id %>" method="POST" action="/delete/<%= item._id %>" class="hidden"></form>
              <button onclick="confirmDelete('<%= item._id %>')"
                class="flex items-center text-red-400 hover:text-red-300 text-xs sm:text-sm"
                title="Delete this record">
                <i class="fas fa-trash mr-1"></i>Delete
              </button>
            </div>
          </div>

        </div>
      <% }) %>
    </div>
    
    <!-- PAGINATION -->
    <% if (totalPages > 1) { %>
      <div class="mt-8 flex justify-center">
        <div class="flex items-center space-x-2">
          <% for (let i = 1; i <= totalPages; i++) { %>
            <a href="/admin/dashboard?page=<%= i %>&limit=<%= limit %>"
              class="px-3 py-1 rounded-lg <%= i === currentPage ? 'bg-orange-500 text-black' : 'bg-gray-800 text-gray-300 hover:bg-gray-700' %>">
              <%= i %>
            </a>
          <% } %>
        </div>
      </div>
    <% } %>
    
  <% } %>
</section>

<!-- FOOTER -->
<footer class="border-t border-gray-800/50 py-6 mt-8">
  <div class="max-w-7xl mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div>
        <h4 class="font-semibold mb-2 text-gray-300">
          <i class="fas fa-shield-alt mr-2"></i>Security Status
        </h4>
        <p class="text-sm text-gray-400">
          <i class="fas fa-check-circle text-green-400 mr-1"></i>
          Dashboard secured with authentication
        </p>
      </div>
      
      <div>
        <h4 class="font-semibold mb-2 text-gray-300">
          <i class="fas fa-database mr-2"></i>Data Management
        </h4>
        <p class="text-sm text-gray-400">
          Total storage: <%= (data.length * 0.5).toFixed(1) %> MB (estimated)
        </p>
      </div>
      
      <div class="text-right">
        <p class="text-sm text-gray-500">
          <i class="fas fa-code mr-1"></i>
          FreeFire Tracker v1.0
        </p>
        <p class="text-xs text-gray-600 mt-1">
          Last updated: <%= new Date().toLocaleDateString() %>
        </p>
      </div>
    </div>
  </div>
</footer>

<script>
// Update current time
function updateTime() {
  const now = new Date();
  document.getElementById('currentTime').textContent = 
    now.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
}
setInterval(updateTime, 1000);
updateTime();

// Auto-logout after 30 minutes of inactivity
let timeout;
function resetTimer() {
  clearTimeout(timeout);
  timeout = setTimeout(() => {
    if (confirm('Session expired due to inactivity. Click OK to login again.')) {
      logout();
    }
  }, 30 * 60 * 1000);
}

// Reset timer on user activity
['click', 'mousemove', 'keypress', 'scroll'].forEach(event => {
  document.addEventListener(event, resetTimer);
});

// Initialize timer
resetTimer();

// Keyboard shortcuts
document.addEventListener('keydown', (e) => {
  // Ctrl+F for search
  if (e.ctrlKey && e.key === 'f') {
    e.preventDefault();
    document.getElementById('searchInput').focus();
  }
  // Esc to clear search
  if (e.key === 'Escape' && document.activeElement.id === 'searchInput') {
    document.getElementById('searchInput').value = '';
    searchRecords();
  }
});

// Add loading animation
document.addEventListener('DOMContentLoaded', () => {
  const cards = document.querySelectorAll('.fade-in');
  cards.forEach(card => {
    card.style.opacity = '0';
    card.style.transform = 'translateY(20px)';
    
    setTimeout(() => {
      card.style.transition = 'opacity 0.3s ease, transform 0.3s ease';
      card.style.opacity = '1';
      card.style.transform = 'translateY(0)';
    }, card.style.animationDelay ? parseFloat(card.style.animationDelay) * 1000 : 0);
  });
});
</script>

</body>
</html>