        { rank: 8, name: "RAONE7 ×͜× Devil", id: "2219475830", level: "Booyah Mastery 75", booyahs: "112K+", kd: "5.77", headshot: "32.6%", guild: "KEYD STARS", highlight: false },
        { rank: 9, name: "LIMIT 么GodMode", id: "1846293701", level: "Booyah Mastery 74", booyahs: "108K+", kd: "5.61", headshot: "31.8%", guild: "EARENA", highlight: false },
        { rank: 10, name: "TOTAL乂AJJU", id: "2093817462", level: "Booyah Mastery 73", booyahs: "99K+", kd: "5.44", headshot: "30.5%", guild: "INDEPENDENT", highlight: false }
      ];
    %>

    <% topPlayers.forEach(player => { %>
      <div class="col-lg-6 col-xl-4">
        <div class="card h-100">
          <div class="card-header text-center py-3 <% if(player.highlight){ %>bg-danger<% } else { %>bg-dark<% } %>">
            <h4 class="mb-0 fw-bold">
              GLOBAL #<%= player.rank %> 
              <span class="conqueror-badge ms-2">CONQUEROR</span>
            </h4>
          </div>
          <div class="card-body text-center">
            <div class="rank-emblem mx-auto mb-3">
              <%= player.rank %>
            </div>
            
            <h3 class="fw-bold mb-2 neon-glow"><%= player.name %></h3>
            <h5 class="text-info mb-3">ID: <strong><%= player.id %></strong></h5>
            
            <div class="stats-grid mt-4">
              <div class="row text-center">
                <div class="col-6 mb-3">
                  <small class="text-secondary d-block">Booyah Pass</small>
                  <strong class="fs-5"><%= player.level %></strong>
                </div>
                <div class="col-6 mb-3">
                  <small class="text-secondary d-block">Total Booyahs</small>
                  <strong class="fs-5 text-success"><%= player.booyahs %></strong>
                </div>
                <div class="col-6">
                  <small class="text-secondary d-block">K/D Ratio</small>
                  <strong class="fs-5 text-warning"><%= player.kd %></strong>
                </div>
                <div class="col-6">
                  <small class="text-secondary d-block">Headshot %</small>
                  <strong class="fs-5 text-danger"><%= player.headshot %></strong>
                </div>
              </div>
            </div>
          </div>
          <div class="card-footer bg-transparent border-0 text-center">
            <small class="text-muted">
              <i class="fas fa-skull me-1"></i> Guild: <%= player.guild %> • Legend Status Active
            </small>
          </div>
        </div>
      </div>
    <% }) %>
  </div>

  <div class="text-center mt-5 pt-4">
    <p class="text-muted fs-6">
      Current Season Stats • Updated December 28, 2025<br>
      Only the strongest dominate the leaderboards • Booyah or get Booyah'd
    </p>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>