        { rank: 2, name: "DEW乂Phantom", id: "1884930271", level: "Booyah Mastery 81", booyahs: "162K+", kd: "7.21", headshot: "38.9%", guild: "EXP ESPORTS", highlight: true },
        { rank: 3, name: "MOSHI ×͜× Shadow", id: "2148391056", level: "Booyah Mastery 80", booyahs: "149K+", kd: "6.88", headshot: "37.5%", guild: "BURIRAM UNITED", highlight: true },
